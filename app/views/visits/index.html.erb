<div>
  <div>
    <h1>
      List of all visits
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new visit
    </h2>

    <form action="/insert_visit" method="post">
      <div>
        <label for="country_id_box">
          Country
        </label>

        <input type="text" id="country_id_box" name="query_country_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="year_box">
          Year
        </label>

        <input type="text" id="year_box" name="query_year">
      </div>

      <button>
        Create visit
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Country
        </th>

        <th>
          User
        </th>

        <th>
          Year
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_visits.each do |a_visit| %>
      <tr>
        <td>
          <%= a_visit.id %>
        </td>

        <td>
          <%= a_visit.country_id %>
        </td>

        <td>
          <%= a_visit.user_id %>
        </td>

        <td>
          <%= a_visit.year %>
        </td>

        <td>
          <%= time_ago_in_words(a_visit.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_visit.updated_at) %> ago
        </td>

        <td>
          <a href="/visits/<%= a_visit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
