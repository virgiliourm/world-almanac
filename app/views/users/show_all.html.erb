
  <div>
    <h1>
      List of all users
    </h1>
  </div>

<h2>Create a new user</h2>
<p>
Note: Once a new user has been created, they will be immediately signed in.
</p>
<form action="/insert_new_user">
<div>
  <label for="browser_username">Username</label>
  <input id="browser_username" type="text" name="query_username" placeholder="Enter a username...">
</div>

<div>
  <label for="browser_email">Email</label>
  <input id="browser_emaile" type="text" name="query_email" placeholder="Enter your email...">
</div>

<div>
  <label for="browser_age">Age</label>
  <input id="browser_age" type="text" name="query_age" placeholder="Enter your age...">
</div>

<div>
  <label for="browser_password">Password</label>
  <input id="browser_password" type="text" name="query_password" placeholder="Enter your password...">
</div>

<div>
  <label for="browser_password_confirmation">Confirm your password:</label>
  <input id="browser_password_confirmation" type="text" name="query_password_confirmation" placeholder="Confirm your password...">
</div>

  <button>Add user</button>
</form>


<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Username
        </th>

        <th>
          Age
        </th>

        <th>
          Email
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>
        <td>
          <%= a_user.id %>
        </td>

        <td>
          <%= a_user.username %>
        </td>

        <td>
          <%= a_user.age %>
        </td>

        <td>
          <%= a_user.email %>
        </td>

        <td>
          <%= time_ago_in_words(a_user.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_user.updated_at) %> ago
        </td>

        <td>
          <a href="/users/<%= a_user.username %>">Show details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
